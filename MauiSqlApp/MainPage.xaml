<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSqlApp.MainPage">

    <StackLayout Padding="20" Spacing="10">
        <!-- Student Registration Form -->
        <Entry x:Name="NameEntry" Placeholder="Enter name" />
        <Entry x:Name="AgeEntry" Placeholder="Enter age" Keyboard="Numeric" />
        <Entry x:Name="EmailEntry" Placeholder="Enter email" Keyboard="Email" />
        <Entry x:Name="CourseEntry" Placeholder="Enter course" />

        <Button Text="Add Student" Clicked="OnAddStudentClicked" BackgroundColor="LightBlue" />

        <!-- List of Students -->
        <CollectionView x:Name="StudentsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold" />
                        <Label Text="{Binding Age, StringFormat='Age: {0}'}" />
                        <Label Text="{Binding Email, StringFormat='Email: {0}'}" />
                        <Label Text="{Binding Course, StringFormat='Course: {0}'}" />
                        <Button Text="Delete" Clicked="OnDeleteStudentClicked" BackgroundColor="LightCoral" CommandParameter="{Binding .}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>